<section class="section">
  <div class="container">
    <div class="columns is-centered">

    <% if member_signed_in? %>

      <%= render 'profile' %>
      <%= render 'form_index' %>

    <% else %>


<div class="section">
  <div class="container">
    <div class="column is-centered">

      <h1 class="title is-4">Posts</h1>


      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th> </th>

            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.body %></td>
              <td> </td>
              <td><%= link_to 'Show', post %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>

    <% end %>

    </div>
  </div>
</section>
