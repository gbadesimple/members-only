
    <div class="section">
      <div class="container">
        <div class="column is-centered">

            <h1 class="title is-4">Posts</h1>

            <table>
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Body</th>

                <% if member_signed_in? %>
                  <th> Author </th>
                <% end %>

                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @posts.each do |post| %>
                  <tr>
                    <td><%= post.title %></td>
                    <td><%= post.body %></td>

                  <% if member_signed_in?%>
                    <td><%= post.member.name %></td>
                  <% end %>

                    <td><%= link_to 'Show', post %></td>

                  <% if member_signed_in? %>
                      <td><%= link_to 'Edit', edit_post_path(post) %></td>
                      <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% end %>

                  </tr>
                <% end %>
              </tbody>
            </table>

            <%= link_to 'New Post', new_post_path %>

        </div>
      </div>
    </div>
