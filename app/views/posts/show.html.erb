<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

        <p id="notice"><%= notice %></p>

        <p>
          <strong>Author:</strong>
          <%= @post.author %>
        </p>

        <p>
          <strong>Title:</strong>
          <%= @post.title %>
        </p>

